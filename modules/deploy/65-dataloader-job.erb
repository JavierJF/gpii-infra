apiVersion: batch/v1
kind: Job
metadata:
  namespace: gpii
  name: preferences-dataloader
spec:
  template:
    metadata:
      labels:
        app: preferences-dataloader
    spec:
      containers:
      - name: preferences-dataloader
        image: <%= @versions["preferences-dataloader"] %>
        env:
        - name: COUCHDB_URL
          value: http://<%= @secrets[:couchdb_user] %>:<%= @secrets[:couchdb_password] %>@couchdb-lb.gpii.svc.cluster.local:5984/preferences
        - name: CLEAR_INDEX
          value: 'true'
      restartPolicy: OnFailure
