apiVersion: batch/v1
kind: Job
metadata:
  namespace: gpii
  name: preferences-dataloader
spec:
  template:
    metadata:
      labels:
        app: preferences-dataloader
    spec:
      containers:
      - name: preferences-dataloader
        image: <%= @versions["preferences-dataloader"] %>
        env:
        - name: COUCHDB_URL
          valueFrom:
            secretKeyRef:
              name: couchdb-secrets
              key: couchdb_preferences_url
        - name: CLEAR_INDEX
          value: 'true'
      restartPolicy: OnFailure
