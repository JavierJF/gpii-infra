apiVersion: v1
kind: ConfigMap
metadata:
  name: couchdb-healthz
  labels:
    app: couchdb
data:
  liveness.yaml: |
    http:
      http://localhost:5984/_up/:
        status: 200
        allow-insecure: false
        no-follow-redirects: false
        timeout: 1000
        body:
        - '{"status":"ok"}'
  readiness.yaml: |
    http:
      http://localhost:5984/_up/:
        status: 200
        allow-insecure: false
        no-follow-redirects: false
        timeout: 1000
        body:
        - '{"status":"ok"}'
