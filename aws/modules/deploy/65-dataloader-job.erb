apiVersion: batch/v1
kind: Job
metadata:
  namespace: gpii
  name: gpii-dataloader-load-static-data
spec:
  template:
    metadata:
      labels:
        app: gpii-dataloader
    spec:
      containers:
      - name: gpii-dataloader
        image: <%= @versions["gpii-dataloader"] %>
        env:
        - name: COUCHDB_URL
          valueFrom:
            secretKeyRef:
              name: couchdb-secrets
              key: dataloader_couchdb_url
        - name: CLEAR_INDEX
          value: 'true'
        - name: DBDATA_DIR
          value: /home/node/universal/testData/dbData
      restartPolicy: OnFailure
