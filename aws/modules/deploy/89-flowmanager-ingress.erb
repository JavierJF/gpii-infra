apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: flowmanager-ingress
  namespace: gpii
  <% if ENV["TF_VAR_cluster_name"].start_with?("dev") %>
  annotations:
    nginx.ingress.kubernetes.io/ssl-redirect: "false"
  <% end %>
spec:
  tls:
    - hosts:
      - flowmanager.<%= ENV["TF_VAR_environment"] %>.gpii.net
      secretName: flowmanager-tls
  rules:
    - host: flowmanager.<%= ENV["TF_VAR_environment"] %>.gpii.net
      http:
        paths:
        - path: /
          backend:
            serviceName: flowmanager
            servicePort: 80
