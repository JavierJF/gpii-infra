apiVersion: apps/v1beta1
kind: Deployment
metadata:
  namespace: gpii
  name: preferences
spec:
  replicas: <%= ENV["TF_VAR_cluster_name"].start_with?("stg.","prd.") ? '6' : '2' %>
  template:
    metadata:
      labels:
        app: preferences
    spec:
      containers:
      - name: preferences
        image: <%= @versions["preferences"] %>
        ports:
        - containerPort: 8081
        env:
        - name: NODE_ENV
          value: gpii.config.preferencesServer.standalone.production
        - name: PREFERENCESSERVER_LISTEN_PORT
          value: '8081'
        - name: DATASOURCE_HOSTNAME
          valueFrom:
            secretKeyRef:
              name: couchdb-secrets
              key: datasource_hostname
        - name: DATASOURCE_PORT
          value: '5984'
