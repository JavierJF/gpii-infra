apiVersion: v1
kind: Service
metadata:
  annotations:
    # Slashes and double quotes required to collapse multi-line
    # annotation to the format that DNS plugin understands
    dns.alpha.kubernetes.io/external: "\
      preferences.<%= ENV["TF_VAR_environment"] %>.gpii.net,\
      flowmanager.<%= ENV["TF_VAR_environment"] %>.gpii.net"
  name: nginx-ingress-controller
  namespace: gpii
