apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: preferences-ingress
  namespace: gpii
  <% if ENV["TF_VAR_cluster_name"].start_with?("dev") %>
  annotations:
    nginx.ingress.kubernetes.io/ssl-redirect: "false"
  <% end %>
spec:
  tls:
    - hosts:
      - preferences.<%= ENV["TF_VAR_environment"] %>.gpii.net
      secretName: preferences-tls
  rules:
    - host: preferences.<%= ENV["TF_VAR_environment"] %>.gpii.net
      http:
        paths:
        - path: /
          backend:
            serviceName: preferences
            servicePort: 80
